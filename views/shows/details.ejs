<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="stylesheets/style.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </head>
  <body>
    <div class="container">
        <div class="row">
            <div class="col s11 m12">
                <div class="card">
                    <div class="card-title">
                    <h1 class="center-align"><%= results.name %>
                    </div>
                    <div class="card-image">
                    <img src="https://image.tmdb.org/t/p/w185/<%=results.poster_path %>">
                    </div>
                    <div class="card-content center-align">
                    <h4 class="detail"> Rating: <%= results.vote_average %></h4>
                    <h4 class="detail"> First Air Date:  <%= results.first_air_date%></h4>
                    <h4 class="detail"> Overview:</h4>
        <h2 class="overview"><%= results.overview %></h2>
        </div>
            </div>
        </div>
      </div>
      </div>
   
      <form id="add-comment-form" method="POST"
  action="/shows/<%= show._id %>">
  <label>Comment:</label>
  <textarea name="content"></textarea>
  <button type="submit">Submit Comment</button>
  </form>
  <% if (show.comments.length) { %>
    <table>
      <thead>
        <tr>
          <th>Comment</th>
        </tr>
      </thead>
      <tbody>
        <% show.comments.forEach(function(c) { %>
          <tr>
            <td><%= c.content %></td>
          </tr>
          <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Comments Yet</h5>
  <% } %>
      <% include ../partials/footer.ejs%>
  </body>
</html>


